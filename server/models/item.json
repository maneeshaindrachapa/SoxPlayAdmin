      "type": "number",
      "default": 0
    },
    "onSale": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "color": {
      "type": "string"
    },
    "weight": {
      "type": "number"
    },
    "salePrice": {
      "type": "number",
      "required": true
    }
